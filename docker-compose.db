services:
  db:
    container_name: postgres
    image: postgres:17
    environment:
      POSTGRES_USER: tacapiuser
      POSTGRES_PASSWORD: tacapipass
#      PGDATA: /data/postgres
      POSTGRES_DB: taccaseapi
    volumes:
      - /dev/null:/data/postgres
      - ./db_init:/docker-entrypoint-initdb.d
    ports:
      - "5432:5432"
#    networks:
#      - db
#    restart: unless-stopped
    healthcheck:
      test: [ "CMD-SHELL", "pg_isready -d postgres" ]
      interval: 30s
      timeout: 10s
      retries: 5
